<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="fontFamily">@font/nunito</item>
        
        <item name="editTextStyle">@style/EditTextAuth</item>
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />
    
    <style name="EditTextAuth" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:minWidth">270dp</item>
        <item name="android:minHeight">40dp</item>"
    </style>
    <style name="ButtonAuth" parent="Widget.AppCompat.Button">
        <item name="android:minWidth">125dp</item>
        <item name="android:minHeight">55dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_login_background</item>
    </style>
</resources>